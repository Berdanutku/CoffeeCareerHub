<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerCoffeeShopScreen">

    <ImageView
        android:id="@+id/ownerCoffeeShopPic"
        android:layout_width="244dp"
        android:layout_height="238dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ownerCoffeeShopText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />


    <TextView
        android:id="@+id/ownerCoffeeShopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ownerCoffeeShopEditButton"
        app:layout_constraintEnd_toEndOf="@+id/ownerCoffeeShopPic"
        app:layout_constraintStart_toStartOf="@+id/ownerCoffeeShopPic"
        app:layout_constraintTop_toBottomOf="@+id/ownerCoffeeShopPic" />


    <Button
        android:id="@+id/ownerCoffeeShopEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Edit Coffee Shop Details"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ownerCoffeeShopViewButton"
        app:layout_constraintEnd_toEndOf="@+id/ownerCoffeeShopText"
        app:layout_constraintStart_toStartOf="@+id/ownerCoffeeShopText"
        app:layout_constraintTop_toBottomOf="@+id/ownerCoffeeShopText" />

    <Button
        android:id="@+id/ownerCoffeeShopViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:text="View Job Requests"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ownerCoffeeShopEditButton"
        app:layout_constraintStart_toStartOf="@+id/ownerCoffeeShopEditButton"
        app:layout_constraintTop_toBottomOf="@+id/ownerCoffeeShopEditButton" />

    <ImageButton
        android:id="@+id/ownerCoffeeShopBackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="600dp"
        android:background="#0FFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</androidx.constraintlayout.widget.ConstraintLayout>