<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/firstCoffeePic"
        android:layout_width="286dp"
        android:layout_height="340dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/firstText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coffee" />

    <TextView
        android:id="@+id/firstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="23dp"
        android:text="Coffee Career Hub"
        android:textColor="#673AB7"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/firstSignUpButton"
        app:layout_constraintEnd_toEndOf="@+id/firstCoffeePic"
        app:layout_constraintStart_toStartOf="@+id/firstCoffeePic"
        app:layout_constraintTop_toBottomOf="@+id/firstCoffeePic" />

    <Button
        android:id="@+id/firstSignUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Sign Up"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/firstLoginButton"
        app:layout_constraintEnd_toEndOf="@+id/firstText"
        app:layout_constraintStart_toStartOf="@+id/firstText"
        app:layout_constraintTop_toBottomOf="@+id/firstText" />

    <Button
        android:id="@+id/firstLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="Login"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/firstOwnerButton"
        app:layout_constraintEnd_toEndOf="@+id/firstSignUpButton"
        app:layout_constraintStart_toStartOf="@+id/firstSignUpButton"
        app:layout_constraintTop_toBottomOf="@+id/firstSignUpButton" />

    <Button
        android:id="@+id/firstOwnerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:text="Login For Coffee Shop Owners"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/firstLoginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstLoginButton" />
</androidx.constraintlayout.widget.ConstraintLayout>